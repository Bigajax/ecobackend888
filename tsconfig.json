{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["types/**/*.d.ts", "server/**/*.ts", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["server/tests/**/*.ts", "tests/**/*.ts"]
}
