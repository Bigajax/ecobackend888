{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend for ECO project (Render deploy)",
  "main": "server.ts",
  "type": "commonjs",
  "engines": {
    "node": ">=18.17.0 <21"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && npm run copy:assets && npm run build:manifest && npm run postbuild:sanitize",
    "build:manifest": "node ./assets/scripts/build-manifest.cjs",
    "postbuild:sanitize": "node scripts/sanitize-modules-manifest.cjs",
    "copy:assets": "node ./scripts/copy-assets.cjs",
    "verify:assets": "node ./scripts/verifyAssetsBuild.cjs",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "cors:smoke": "bash server/scripts/cors-smoke.sh",
    "test:meditation-feedback": "ts-node scripts/testMeditationFeedback.ts",
    "smoke:feedback": "ts-node scripts/smokeFeedbackSystem.ts",
    "registrar:emocionais": "node ./scripts/registrar-emocionais.cjs",
    "registrar:filosoficos": "node ./scripts/registrar-filosoficos.cjs",
    "registrar:todos": "npm run registrar:emocionais && npm run registrar:filosoficos"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.21",
    "@google-cloud/language": "^7.0.2",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.57.4",
    "@types/express": "^4.17.21",
    "@vercel/node": "^3.2.29",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "elevenlabs": "^1.59.0",
    "express": "^4.21.2",
    "form-data": "^4.0.3",
    "fs-extra": "^11.3.0",
    "long": "^5.3.2",
    "mic": "^2.1.2",
    "mixpanel": "^0.18.1",
    "multer": "^2.0.1",
    "openai": "^5.6.0",
    "ws": "^8.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/types": "^30.2.0",
    "@types/cors": "^2.8.18",
    "@types/jest": "^30.0.0",
    "@types/long": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.11",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^2.0.16",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
