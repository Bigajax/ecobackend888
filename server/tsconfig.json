{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": []
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.d.ts",
    "listenMic.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
