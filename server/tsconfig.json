{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.d.ts",
    "listenMic.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
