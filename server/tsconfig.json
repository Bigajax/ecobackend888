{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": []
  },
  "include": [
    "server/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    // exclui Ã¡rvores legadas na raiz do repo
    "core/**",
    "services/**",
    "controllers/**",
    "routes/**",
    "lib/**",
    "listenMic.ts"
  ]
}
